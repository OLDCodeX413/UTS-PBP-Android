<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgcontact2"
    tools:context=".ui.contactus.ContactUsFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:text="OKAERINASAI"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title2"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:text="goshujin sama"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descutama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title2"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="Aplikasi ini menyediakan rekomendasi anime terbaik dengan kategory yang dapat disesuaikan dengan keinginan anda"
        android:layout_marginStart="20pt"
        android:gravity="center"
        android:textSize="50px"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/desckedua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descutama"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:text="Selamat Berseluncur dan menikmati tontonan favorit anda"
        android:layout_marginStart="20pt"
        android:gravity="center"
        android:textSize="45px"
        android:textColor="#fff" />

</RelativeLayout>