<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".FragmentActivity">

    <ImageView
        android:id="@+id/iconSplash"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/intro1" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/iconSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20pt"
        android:text="AnimeReviewer"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconSplash"
        android:layout_marginTop="90pt"
        android:textColor="@color/black"
        android:text="By:"
        android:textSize="10sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc1"
        android:layout_marginTop="1pt"
        android:textColor="@color/white"
        android:text="Muhammad Haikal Fikri"
        android:textSize="15sp"
        android:textStyle="bold"/>

</RelativeLayout>